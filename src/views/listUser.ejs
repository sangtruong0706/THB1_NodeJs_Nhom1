<div class="container">
  <h3>List User</h3>
  <table class="table align-middle mb-0 bg-white">
    <thead class="bg-light">
      <tr>
        <th>STT</th>
        <th>Họ và Tên</th>
        <th>Tài Khoản</th>
        <th>Giới tính</th>
        <th>Email</th>
        <th>Địa chỉ</th>
        <th>Quyền</th>
        <th>Hành động</th>
      </tr>
    </thead>
    <tbody>
      <% for(let i=0; i< data.rows.length; i++) {%>
      <tr>
        <td>
          <%= i+1 %>
        </td>
        <td>
          <%= data.rows[i].fullname %>
        </td>
        <td>
          <%= data.rows[i].username %>
        </td>
        <td>
          <%= data.rows[i].gender %>
        </td>
        <td>
          <%= data.rows[i].email %>
        </td>
        <td>
          <%= data.rows[i].address %>
        </td>
        <td>
          <%if(data.rows[i].groupId==0){
           %>
           user
          <%}else{%>
            admin
          <%}%>
        </td>
        
        <td>
          <a href="/detail-user/<%= data.rows[i].id %>"><i class="fa-solid fa-eye"></i></a> |
          <a href="/edit-user/<%= data.rows[i].id %>"><i class="fa-solid fa-wrench"></i></a> |
          <a href="/delete-user/<%= data.rows[i].id %>"><i class="fa-solid fa-trash"></i></a> 
        </td>
      </tr>
      <%}%>
    </tbody>
  </table>
</div>
